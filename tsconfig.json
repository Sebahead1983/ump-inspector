{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}